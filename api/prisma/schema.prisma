generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String 
  username String @unique
  name String
  photo String? 
  createdAt DateTime @default(now())
  nests Nest[]
}

enum NestType {
  apartment
  house 
  condo 
  land
}

enum UserActionType {
  buy 
  rent
}

model Nest {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userActionType UserActionType
  nestType NestType
  title String
  price Int
  imgUrls String[]
  lat String?
  long String? 
  address String
  city String
  bedroomCount Int?
  bathroomCount Int?
  createdAt DateTime @default(now())
  userId String @db.ObjectId
  user User @relation(fields: [userId], references: [id])
  nestDetail NestDetail?
}

model NestDetail {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  description String
  utilities String?
  petsPolicy String?
  incomePolicy String?
  size Int?
  schoolCount Int?
  busCount Int?
  restaurantCount Int?
  nestId String @db.ObjectId @unique
  nest Nest @relation(fields: [nestId], references: [id])
}
